/*
    product.bit -- Product Bit File for the Multithreaded Portable Runtime (MPR)
 */

bit({
    blend: [
        "src/test/test.bit",
    ],
    settings: {
        /* Default configuration overridden by build.bit */
		product: 'mpr',
		title: 'Multithreaded Portable Runtime',
		version: '4.0.0',
		buildNumber: 'B0',
        configuration: 'debug',
        debug: true,
        charlen: 1,
        tune: 'size',
        assert: true,
        float: true,
        legacy: false,
        preprocess: false,
        rom: false,
        testDepth: 1,
    },

    configurations: {
        debug: { settings: { 
            debug: true, 
            assert: true,
        }, },
        release: { settings: { 
            debug: false, 
            assert: false,
        } },
    },

    '+optional': [ 'doxygen', 'ejs', 'http', 'openssl', 'matrixssl' ],

    common: {
        '+includes': [ 'src', '.' ]
    },

    targets: {
        libmpr: {
            type: 'lib',
            sources: [ 'src/*.c', 'src/deps/dtoa.c' ],
            exclude: [ /manager.c|\/ssl\/|\/utils\// ],
            platforms: [ 'local', 'vxworks-ppc', 'cross' ]
        },

        libmprssl: {
            enable: '"${components.openssl.path}" != "" || "${components.matrixssl.path" != ""',
            type: 'lib',
            depend: [ 'libmpr', 'openssl', 'matrixssl' ],
            sources: [ 'src/ssl/*.c' ],
        },

        manager: {
            type: 'exe',
            rule: 'gui',
            depend: [ 'libmpr' ],
            sources: [ 'src/manager.c' ],
        },

        makerom: {
            type: 'exe',
            depend: [ 'libmpr', ],
            sources: ['src/utils/makerom.c'],
        },

        chargen: {
            type: 'exe',
            depend: [ 'libmpr', ],
            sources: [ 'src/utils/charGen.c' ],
        },
	},
})
