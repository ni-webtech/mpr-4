#
#   SSL
#
defineComponent() {
	local iflags libpaths deps path search ver builtin imports

    path="${1:-.}"
    iflags=-I`probe --name mprSsl.h --dir --search "$path:$path/src/deps/mpr:$path/src/include" "mprSsl.h"`
    imports=`probe --name libmprssl --search "$path:$path/out/lib" "libmprssl" `
    if [ "$imports" = "" -a "$path" != "." ] ; then
        warnComponent mprSsl "Can't locate libmprssl"
        return
    fi
    libpaths="${imports%/*}"
    deps=
    if isdefined MATRIXSSL ; then
        deps="$deps matrixssl"
    fi
    if isdefined OPENSSL ; then
        deps="$deps openssl"
    fi
    if [ "$deps" = "" ] ; then
        warnComponent mprSsl "No SSL provider configured"
        return
    fi
    deps="$deps mpr"
    if [ "$path" = . ] ; then
        builtin="--builtin"
        libpaths=
    fi
    configureComponent --libs "mprssl" --libpaths "$libpaths" --iflags "$iflags" --dependencies "$deps" $builtin \
        --imports "$imports" ssl
}
