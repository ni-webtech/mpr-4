#
#   OpenSSL
#
defineComponent() {
	local path search ver libs libpaths imports

    ver="latest"

    if [ $BLD_HOST_OS = MACOSX ] ; then
        path=${1:-/usr/include:/usr/lib}
    else
        path="${1:-.}"
    fi
    if [ $OS = WIN ] ; then
        libpaths=`probe --name openssl --search "$path:extensions/openssl/$ver" --dir "out32dll/libeay32" `
        imports="$libpaths/out32dll/libeay32.dll $libpaths/out32dll/ssleay32.dll"
        libs="libeay32 ssleay32"
        iflags="-I$libpaths/inc32"

    elif [ $OS = CYGWIN ] ; then
        #
        #   Use system libraries
        #
        libpaths="/usr/lib"
        imports="$libpaths/libssl.a $libpaths/libcrypto.a"
        libs="ssl crypto"
        iflags="-I$libpaths/include"

    else 
        libpaths=`probe --name openssl --search "$path:extensions/openssl/$ver" --dir "libcrypto" `
        iflags=-I`probe --name openssl --search "$path:$extensions/opensl/$ver/include" --dir "openssl/ssl.h"`
        libs="ssl crypto"
        if [ $OS != MACOSX ] ; then
            imports="$libpaths/libssl.so $libpaths/libcrypto.so"
        fi
    fi
    if [ "$iflags" = "-I" ] ; then
        warnComponent "openssl"
        return
    fi
    CFG_HOST_SSL_MANDATORY=1
    configureComponent --libs "$libs" --libpaths "$libpaths" --iflags "$iflags" --imports "$imports" openssl
}
