#
#   Http
#
defineComponent() {
    local name path libpaths

    path="$1"
    name="http"
    search="src/deps"

    path=`probe --path "$path" --search "$search" --partial http $name`
    if [ "$path" = "" ] ; then
        warnComponent $name
        return
	fi
    if isExternal "$path" ; then
        libpaths="$path/lib"
    fi
    configureComponent --builtin --optional-dependencies "regexp" --libs "http" --path "$path" \
        --libpaths "$libpaths" $name

    BLD_FEATURE_HTTP_ALL_IN_ONE=1
}
